{
  "name": "backend",
  "version": "1.0.0",
  "description": "MyStore API",
  "license": "ISC",
  "author": "Amos",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "server": "npm run dev",
    "start": "cross-env NODE_ENV=production node server.js",
    "start:staging": "cross-env NODE_ENV=staging node server.js",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "clean": "rd /s /q node_modules && del package-lock.json && npm install"
  },
  "dependencies": {
    "@emailjs/nodejs": "^5.0.2",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "google-auth-library": "^10.3.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.19.0",
    "mongoose": "^8.15.1",
    "mongoose-paginate-v2": "^1.9.1",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.6",
    "razorpay": "^2.9.6",
    "stripe": "^18.2.0",
    "validator": "^13.15.15",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ecommerce",
    "api",
    "mongodb",
    "express"
  ]
}
